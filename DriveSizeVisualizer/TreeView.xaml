<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DriveSizeVisualizer.TreeView"
             xmlns:custom="clr-namespace:DriveSizeVisualizer"
             xmlns:model="clr-namespace:DriveSizeLib.Model;assembly=DriveSizeLib"
             x:Name="tree">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Node.DisplayString,Source={x:Reference tree}}"
            VerticalOptions="Center" 
            HorizontalOptions="Start" x:Name="label" />

        <VerticalStackLayout x:Name="childLayout"  Margin="15,5,0,5" IsVisible="True">
           
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentView>
