<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DriveSizeVisualizer.FileView"
             x:Name="file">
    <VerticalStackLayout>
        
        <Label Text="{Binding File.DisplayString, Source={x:Reference file}}" HorizontalOptions="Start"/>
            
    </VerticalStackLayout>
</ContentView>
